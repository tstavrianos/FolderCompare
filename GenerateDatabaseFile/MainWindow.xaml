<Window x:Class="GenerateDatabaseFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerateDatabaseFile"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="140" Width="525">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="0" Grid.Row="0">Selected folder</TextBlock>
        <Button Grid.Column="1" Grid.Row="0" Margin="5">Browse</Button>
        <TextBlock Grid.Column="0" Grid.Row="1">Output file</TextBlock>
        <Button Grid.Column="1" Grid.Row="1" Margin="5">Browse</Button>
        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">Include hash of detected files</CheckBox>
        <Button Grid.Column="1" Grid.Row="3" Margin="5">Generate</Button>
    </Grid>
</Window>
